<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/ivMenuFoodImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_food_image"
        android:contentDescription="Ảnh món ăn"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvMenuFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên menu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvMenuFoodDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miêu tả menu"
        android:textSize="14sp"
        android:textColor="#666"
        android:maxLines="3"
        android:ellipsize="end" />
</LinearLayout>
