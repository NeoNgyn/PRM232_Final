<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".views.activity.HomeMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header với chào hỏi và tìm kiếm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp">

            <!-- Lời chào -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Home icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xin chào, Admin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_today"
                    android:contentDescription="Calendar icon" />

            </LinearLayout>

            <!-- Thanh tìm kiếm -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Tìm kiếm thực phẩm, món ăn..."
                        android:background="@android:color/transparent"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:inputType="text"
                        android:autofillHints="Search food" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:layout_marginStart="8dp"
                        android:contentDescription="Search icon" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Section món ăn nổi bật -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginTop="8dp"
            android:paddingVertical="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Món ăn nổi bật hôm nay"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp" />

            <!-- RecyclerView ngang cho món nổi bật -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFeatured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                tools:listitem="@layout/item_featured_food" />

        </LinearLayout>

        <!-- Section menu món ăn hôm nay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginTop="8dp"
            android:paddingVertical="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu món ăn hôm nay"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp" />

            <!-- RecyclerView dọc cho menu -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="8dp"
                tools:listitem="@layout/item_home_menu" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
