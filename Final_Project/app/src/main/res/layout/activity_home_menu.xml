<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".views.activity.HomeMenuActivity">

    <!-- Header với chào hỏi và tìm kiếm (đặt cố định bên trên) -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="6dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentTop="true">

        <!-- Lời chào và Create Menu Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_avatar_default"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:contentDescription="Avatar icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xin chào, Admin"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_fridge"
                android:contentDescription="Fridge icon"
                android:layout_marginEnd="12dp" />

            <!-- Create Menu Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fabAddMenu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Tạo mới"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:paddingHorizontal="16dp"
                app:backgroundTint="#2196F3"
                app:cornerRadius="20dp"
                app:icon="@android:drawable/ic_menu_add"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@android:color/white"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <!-- Thanh tìm kiếm -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Tìm kiếm thực phẩm, món ăn..."
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:inputType="text"
                    android:autofillHints="Search food" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Search icon" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Phần nội dung cuộn đặt bên dưới header -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerContainer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mục Công thức gần đây -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_recipe_book"
                        android:contentDescription="Recipe icon"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Công thức gần đây"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewRecentRecipes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    tools:listitem="@layout/item_recipe" />
            </LinearLayout>

            <!-- Section menu hôm nay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="12dp"
                android:paddingVertical="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🍽️ Menu hôm nay"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="12dp" />

                <!-- RecyclerView ngang cho menu hôm nay -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTodayMenus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    tools:listitem="@layout/item_featured_food" />

            </LinearLayout>

            <!-- Section menu sắp tới -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="12dp"
                android:paddingVertical="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📅 Menu sắp tới"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="12dp" />

                <!-- RecyclerView ngang cho menu sắp tới -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewUpcomingMenus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    tools:listitem="@layout/item_featured_food" />

            </LinearLayout>

            <!-- Section menu món ăn hôm nay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="12dp"
                android:paddingVertical="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📋 Tất cả menu món ăn"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="12dp" />

                <!-- RecyclerView dọc cho menu -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingHorizontal="8dp"
                    tools:listitem="@layout/item_home_menu" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
