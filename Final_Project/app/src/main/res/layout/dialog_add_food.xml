<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etName" android:hint="Tên thực phẩm"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etQty" android:inputType="numberDecimal" android:hint="Số lượng"
        android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etUnit" android:hint="Đơn vị (hộp, kg, quả...)"
        android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etExpiry" android:hint="Hạn dùng (dd/MM/yyyy)"
        android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etNotes" android:hint="Ghi chú"
        android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btnCancel" android:text="Hủy"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>

        <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSave" android:text="Lưu"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:textColor="@android:color/white" android:backgroundTint="@color/orange"/>
    </LinearLayout>
</LinearLayout>
