<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ivMenuFoodImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_food_image"
        android:contentDescription="Ảnh món ăn" />

    <TextView
        android:id="@+id/tvMenuFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên menu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvMenuFoodDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miêu tả menu"
        android:textSize="14sp"
        android:textColor="#666"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <!-- Edit and Delete buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditMenu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Sửa"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            app:backgroundTint="#2196F3"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart"
            app:iconSize="18dp"
            app:iconTint="@android:color/white"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteMenu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Xóa"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            app:backgroundTint="#F44336"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconGravity="textStart"
            app:iconSize="18dp"
            app:iconTint="@android:color/white"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>
