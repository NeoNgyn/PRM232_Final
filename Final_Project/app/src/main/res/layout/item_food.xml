<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:padding="10dp"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="8dp" android:background="@drawable/bg_item_card"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgFood" android:layout_width="60dp" android:layout_height="60dp"
        android:scaleType="centerCrop" android:src="@drawable/ic_launcher_foreground"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvFoodName" android:text="Sữa tươi"
            android:textStyle="bold" android:textSize="16sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvFoodInfo" android:text="HSD: 03/10 | SL: 2 hộp"
            android:textSize="13sp" android:textColor="#7A7A7A"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <!-- Track Order -> Xem chi tiết (cam đặc) -->
        <Button
            android:id="@+id/btnDetail" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Xem chi tiết" android:textColor="@android:color/white"
            android:backgroundTint="@color/orange"/>

        <!-- Cancel -> Xóa (viền cam) -->
        <Button
            android:id="@+id/btnDelete" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Xóa" android:layout_marginTop="6dp"
            android:textColor="@color/orange" android:background="@drawable/bg_button_outline_orange"/>
    </LinearLayout>
</LinearLayout>
