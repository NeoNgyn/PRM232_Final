<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF5"
    tools:context=".views.activity.MealDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:clipToPadding="false">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_detail_meal_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/food_image"
                        tools:src="@drawable/placeholder_food" />

                </androidx.cardview.widget.CardView>

                <!-- Back button: raised so it's above the image and easier to tap -->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circular_add_button_background"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="@string/back_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="12dp"
                    android:translationZ="12dp"
                    android:padding="8dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <!-- More button (text) raised and clickable -->
                <TextView
                    android:id="@+id/btn_more_text"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circular_add_button_background"
                    android:gravity="center"
                    android:text="@string/more_options"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:contentDescription="@string/more_options"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="12dp"
                    android:translationZ="12dp"
                    android:padding="8dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_detail_meal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_toStartOf="@+id/iv_heart"
                    android:text="@string/recipe_name_default"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_favorite_border"
                    android:contentDescription="@string/favorite_desc" />

                <TextView
                    android:id="@+id/tv_detail_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_detail_meal_name"
                    android:layout_marginTop="8dp"
                    android:text="@string/recipe_desc_default"
                    android:textSize="16sp" />

            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true"
                    app:singleSelection="true">
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_nutrition"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chip_nutritions"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_color_selector"
                        app:chipStrokeColor="#ADADAD"
                        app:chipStrokeWidth="1dp"
                        android:checkable="true"
                        app:checkedIconVisible="false" />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_ingredients"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chip_ingredients"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_color_selector"
                        app:chipStrokeColor="#ADADAD"
                        app:chipStrokeWidth="1dp"
                        android:checkable="true"
                        app:checkedIconVisible="false" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_instructions"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chip_instructions"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_color_selector"
                        app:chipStrokeColor="#ADADAD"
                        app:chipStrokeWidth="1dp"
                        android:checkable="true"
                        app:checkedIconVisible="false" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/ll_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#E0E0E0" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_edit"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/btn_edit_text"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:drawablePadding="8dp"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/btn_delete_text"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:drawablePadding="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>