<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentTop="true">

        <!-- Back button and search term -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_revert"
                android:padding="12dp"
                android:contentDescription="Back button"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/tvSearchQuery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kết quả tìm kiếm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginStart="8dp"
                android:paddingVertical="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Scroll Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerContainer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- No Results Message -->
            <LinearLayout
                android:id="@+id/layoutNoResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:alpha="0.3"
                    android:contentDescription="No results icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Không tìm thấy kết quả"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#666"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vui lòng thử từ khóa khác"
                    android:textSize="14sp"
                    android:textColor="#999"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <!-- Results Container -->
            <LinearLayout
                android:id="@+id/layoutResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Menu Section -->
                <LinearLayout
                    android:id="@+id/layoutMenuSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="2dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📋 Menu"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_marginBottom="12dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewMenuResults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_home_menu"/>

                </LinearLayout>

                <!-- Recipe Section -->
                <LinearLayout
                    android:id="@+id/layoutRecipeSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="16dp"
                    android:elevation="2dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🍳 Công thức"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_marginBottom="12dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewRecipeResults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_recipe"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>

